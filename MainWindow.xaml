<Window x:Class="ArrayListWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrayListWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="Add" Content="ADD" HorizontalAlignment="Left" Margin="140,142,0,0" VerticalAlignment="Top" Width="75" Click="Add_Click"/>
        <Button x:Name="Remove" Content="REMOVE" HorizontalAlignment="Left" Margin="220,142,0,0" VerticalAlignment="Top" Width="75" Click="Remove_Click"/>
        <Button x:Name="ShowAll" Content="SHOW ALL" HorizontalAlignment="Left" Margin="300,142,0,0" VerticalAlignment="Top" Width="75" Click="ShowAll_Click"/>
        <TextBox x:Name="Data" HorizontalAlignment="Left" Height="23" Margin="140,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235"/>

    </Grid>
</Window>
